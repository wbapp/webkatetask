<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--<parameters>-->
    <!--<parameter key="value.setPerPage">10</parameter>-->
    <!--</parameters>-->

    <services>

        <service id="web_kate_test_task_bundle.executor.repository" class="WebKate\Bundle\TestTaskBundle\Entity\ExecutorRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WebKateTestTaskBundle:Executor</argument>
        </service>

        <service id="web_kate_test_task_bundle.category.repository" class="WebKate\Bundle\TestTaskBundle\Entity\CategoryRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WebKateTestTaskBundle:Category</argument>
        </service>

        <service id="web_kate_test_task_bundle.category.repository" class="WebKate\Bundle\TestTaskBundle\Entity\ProjectRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WebKateTestTaskBundle:Project</argument>
        </service>

        <service id="web_kate_test_task_bundle.tree_structure" class="WebKate\Bundle\TestTaskBundle\TreeStructure\TreeStructure">
            <argument type="service" id="web_kate_test_task_bundle.executor.repository"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

    </services>

</container>